{
  "name": "ecommerce-application",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint ./src && npx stylelint ./src/**/*.scss",
    "lint:fix": "eslint --fix ./src && npx stylelint ./src/**/*.scss --fix",
    "format": "prettier ./src --write",
    "ci:format": "prettier ./src --check",
    "prepare": "husky ./.husky",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "stylelint": "^16.5.0",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-use-nesting": "^5.1.1",
    "typescript": "^5.2.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^5.2.0",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "validate-branch-name": {
    "pattern": "^sprint-[1-4]/.+$",
    "errorMsg": "Branch name is not correct."
  },
  "dependencies": {
    "@commercetools/platform-sdk": "^7.8.0",
    "@commercetools/sdk-client-v2": "^2.5.0",
    "jsdom": "^24.0.0",
    "navigo": "^8.11.1",
    "swiper": "^11.1.3"
  }
}
